<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="RadioButtonTheme" parent="AppTheme">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorSecondary">#b3ffffff</item>
    </style>
</resources>
